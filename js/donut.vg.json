{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Gender Proportion of Migrants",
    "background": "#CAEDF8",
    "grid": true,
    "gridColor": "black",
    "data": { 
        "url": "data/3_gender_pie.csv"
    },
    "params": [
        {
          "name": "Year_selection",
          "bind": {
            "input": "select",
            "options": [
                "All",
              "1990",
              "1995",
              "2000",
              "2005",
              "2010",
              "2015",
              "2020"
            ],
            "labels": [
                "All Years",
                "1990",
                "1995",
                "2000",
                "2005",
                "2010",
                "2015",
                "2020"
            ],
            "name": "Year Selection: "
          }
        },
        {
            "name": "Continent_selection",
            "bind": {
              "input": "select",
              "options": [
                "All",
                "Americas",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "labels": [
                "All Continents",
                "Americas",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "name": "Continent Selection: "
            }
          }
      ],
    "transform": [
        {
            "filter": "datum.Year == Year_selection"
        },
        {
            "filter": "datum.Region == Continent_selection"
        }
    ],
    "width": 270,
    "height": 180,
    "layer": [
        {
            "mark": {
                "type": "arc",
                "innerRadius": 50
            },
            "encoding": {
                "theta": {
                    "field": "Gender Percent",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Gender",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Male",
                            "Female"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Year",
                        "type": "nominal",
                        "title": "Year"
                    },
                    {
                        "field": "Gender",
                        "type": "nominal",
                        "title": "Gender"
                    },
                    {
                        "field": "Region",
                        "type": "nominal",
                        "title": "Continent"
                    },
                    {
                        "field": "Gender Percent",
                        "type": "quantitative",
                        "title": "Percentage"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "fontSize": 15
            },
            "encoding": {
                "text": {
                    "field": "female_male_ratio",
                    "format": ".0%"
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "x": 20,
                "y": 30,
                "fontSize": 14,
                "font": "Source Sans Pro"
            },
            "encoding": {
                "text": {
                    "condition":{
                        "test": "datum.Gender == 'Male'",
                        "value": "Male"
                    },
                    "value": ""
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "x": 240,
                "y": 30,
                "fontSize": 14,
                "font": "Source Sans Pro"
            },
            "encoding": {
                "text": {
                    "value": "Female"
                }
            }
        }
    ],
    "config": {
        "style": {
            "cell": {
                "stroke": "#CAEDF8"
            }
        }
    } 
}